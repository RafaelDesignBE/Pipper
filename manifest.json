{
  "name": "autoPipper",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Open Picture in Picture videos",
  "icons": {
    "128": "images/logo128.png",
    "32": "images/logo32.png",
    "48": "images/logo48.png"
  },
  "homepage_url": "https://rafaeldesign.be",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "16": "images/logo16.png",
      "32": "images/logo32.png"
    },
    "default_title": "PIP"
  },
  "permissions": [
    "https://*/*",
    "http://*/*",
    "file:///*",
    "tabs"
  ]
}